{
      "put": {
            "tags": ["user"],
            "description": "This API allows user to upload their avatar image.",
            "parameters": [{ "$ref": "../../parameter/token.json" }],
            "requestBody": { "$ref": "../../dto/updateAvatar.json" },
            "responses": {
                  "200": {
                        "description": "User avatar update successfully",
                        "content": {
                              "application/json": {
                                    "schema": {
                                          "$ref": "../../schema/apiResponse.json"
                                    }
                              }
                        }
                  },
                  "400": {
                        "description": "The avatar file is required",
                        "$ref": "../../exception/400.json"
                  },
                  "400,": {
                        "description": "The avatar file couldn't be uploaded. Photos should be smaller than {{size}} MB",
                        "$ref": "../../exception/400.json"
                  },
                  "400,,": {
                        "description": "The avatar file couldn't be uploaded. Photos should be saved as JPEG, JPG, PNG, BMP files",
                        "$ref": "../../exception/400.json"
                  },
                  "500": {
                        "description": "Internal server error from aws server, upload failed to aws server",
                        "$ref": "../../exception/500.json"
                  }
            }
      }
}
